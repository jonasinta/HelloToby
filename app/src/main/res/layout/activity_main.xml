<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hellotoby.MainActivity"
    tools:ignore="Deprecated">


    <ImageView
        android:id="@+id/imageView1"


        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/textView1"
        android:src="@drawable/lhciam"
        android:visibility="visible"
        tools:ignore="RtlHardcoded,ContentDescription" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/SetPreferences"
        android:layout_toRightOf="@+id/SetPreferences"
        android:linksClickable="false"
        android:text="@string/hello_world"
        android:textSize="@dimen/fontus" />

    <Button
        android:id="@+id/buttonSetPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSend"
        android:alpha="1.5"
        android:text="Preferences"
        android:textSize="@dimen/fontus" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView1"
        android:text="Test Send Email" />


</RelativeLayout>